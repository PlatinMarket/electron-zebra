{
  "name": "electron-zebra",
  "description": "Nil",
  "version": "1.0.0",
  "author": "Ali Can YILDIZ <anotherglitchinthematrix@gmail.com>",
  "license": "MIT",
  "main": "./app/src/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/anotherglitchinthematrix/electron-zebra.git"
  },
  "scripts": {
    "dev": "tsc && electron ./app/src/main.js",
    "dev:rebuild" : "electron-builder install-app-deps",
    "dist:build": "tsc && electron-builder build --win --publish never",
    "dist:publish": "tsc && electron-builder --win --publish always",
    "postinstall": "yarn dev:rebuild"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/mithril": "^2.0.0",
    "@types/usb": "^1.5.1",
    "electron": "^6.0.12",
    "electron-builder": "^21.2.0",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "electron-log": "^3.0.8",
    "electron-updater": "^4.1.2",
    "express": "^4.17.1",
    "mithril": "^2.0.4",
    "usb": "^1.6.0",
    "usb-detection": "^4.5.0"
  },
  "build": {
    "appId": "com.electron.electron-zebra",
    "productName": "Zebra",
    "directories": {
      "output": "distribution"
    },
    "files": [
      "./app/**/*"
    ],
    "icon": "./app/assets/icon/app.png",
    "win": {
      "target":[
        "nsis"
      ]
    },
    "nsis": {
      "allowElevation": true,
      "perMachine": true,
      "oneClick": false,
      "createDesktopShortcut": "always"
    },
    "publish": {
      "provider": "github"
    }
  }
}
